<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/map_layer_bg"
    android:paddingBottom="5px"
    android:paddingLeft="5px"
    android:paddingRight="5px"
    android:paddingTop="5px" >

    <ImageView
        android:id="@+id/map_bubbleIcon"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:padding="2dp"
        android:src="@drawable/icon_pinave"
        android:visibility="gone" />

    <TextView
        android:id="@+id/map_bubbleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/map_bubbleIcon"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/map_bubbleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/map_bubbleTitle"
        android:layout_toRightOf="@+id/map_bubbleIcon"
        android:paddingBottom="50dp"
        android:singleLine="true"
        android:textColor="@color/white" />

</RelativeLayout>