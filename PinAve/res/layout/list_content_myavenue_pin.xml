<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50dip"
    android:background="@drawable/cell_back" >

    <ImageView
        android:id="@+id/cell_image"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dip"
        android:background="@drawable/c_allcategories" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:gravity="left|center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/cell_title"
            android:layout_width="fill_parent"
            android:layout_height="30dip"
            android:layout_marginTop="4dip"
            android:singleLine="true"
            android:text="title"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" android:gravity="left|center_vertical"/>

        <TextView
            android:id="@+id/cell_address"
            android:layout_width="fill_parent"
            android:layout_height="14dip"
            android:singleLine="true"
            android:text="address"
            android:textColor="@color/black"
            android:textSize="10dp" android:gravity="right|center_vertical"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/cell_arrow"
        android:layout_width="9dip"
        android:layout_height="13dip"
        android:layout_gravity="center"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/cell_arrow" />

</LinearLayout>