<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="44dip"
    android:background="@drawable/cell_back"
    >

    <ImageView
        android:id="@+id/cell_category"
        android:layout_width="44dip"
        android:layout_height="44dip"
        android:layout_marginLeft="10dip"
        android:layout_gravity="center_vertical"
        android:background="@drawable/c_allcategories"/>

    <TextView
        android:id="@+id/cell_title"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:gravity="left|center_vertical"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />
    
     <ImageView
        android:id="@+id/cell_arrow"
        android:layout_width="9dip"
        android:layout_height="13dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_gravity="center"
        android:background="@drawable/cell_check"/>
    

</LinearLayout>